@model Diary.WEB.ViewModels.Invite.InviteViewModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/invitation.css" rel="stylesheet" type="text/css" />

<div class="invite">

	<h2>Запросіть нового користувача!</h2>

	<form asp-action="GetEmailForInvitation" asp-controller="Admin" method="post">

		<div class="invite-box">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="DateCreation" />
			<input type="hidden" asp-for="ModifiedDate" />

			<p>
				<span>Введіть текст запрошення</span>
				<input type="text" placeholder="Запрошення" asp-for="Message" />
				<span asp-validation-for="Message"></span>
			</p>

			<p>
				<span>Email користувача, якому надіслати запрошення</span>
				<input type="email" placeholder="Email" asp-for="EmailNewUser">
				<span asp-validation-for="EmailNewUser"></span>
			</p>
			<div class="send-invitation">
				<input type="submit" value="Запросити" />
			</div>
		</div>
	</form>
</div>