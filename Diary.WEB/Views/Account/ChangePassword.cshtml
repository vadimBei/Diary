@model Diary.WEB.ViewModels.Account.ChangePasswordViewModel

@{
	Layout = "~/Views/Shared/_Settings.cshtml";
}

<link href="~/css/changePassword.css" rel="stylesheet" type="text/css" />

<div class="change">

	<h3>Змінна паролю</h3>

	<form asp-action="ChangePassword" asp-controller="Account">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<input type="hidden" asp-for="Email" />
		<input type="hidden" asp-for="UserName" />

		<p>
			<input type="password" placeholder="Старий пароль" asp-for="CurrentPassword" />
			<span asp-validation-for="CurrentPassword"></span>
		</p>
		
		<p>
			<input type="password" placeholder="Підтвердіть новий пароль" asp-for="NewPassword" />
			<span asp-validation-for="NewPassword"></span>
		</p>

		<input type="submit" value="Зберегти" />
	</form>
</div>

