@model Diary.WEB.ViewModels.Record.RecordViewModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/createRecord.css" rel="stylesheet" type="text/css" />

<div class="create-form">

	<form method="post" asp-controller="Record" asp-action="CreateRecord" enctype="multipart/form-data">

		<h1>Новий запис</h1>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div>
			<input asp-for="Name" placeholder="Назва" />
			<span asp-validation-for="Name"></span>
		</div>

		<div>
			<textarea asp-for="Text" placeholder="Примітки"></textarea>
			<span asp-validation-for="Text"></span>
		</div>

		<div class="form-group">
			<div class="col-md-10">
				<input type="file" asp-for="UploadedFiles" multiple />
			</div>
		</div>

		<div class="create">
			<input type="submit" value="Save" />
		</div>
	</form>
</div>
