@model Diary.WEB.ViewModels.Account.ChangePasswordViewModel

@{
	Layout = "~/Views/Shared/_Settings.cshtml";
}

<link href="~/css/changePassword.css" rel="stylesheet" type="text/css" />

<div class="change">

	<h3>Відновлення паролю для користувача: @Model.UserName</h3>

	<form asp-action="ChangePassword" asp-controller="Account">
		<div class="box">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Email" />
			<input type="hidden" asp-for="UserName" />

			<label asp-for="CurrentPassword">Введіть старий пароль:</label>
			<input type="password" placeholder="Старий пароль" asp-for="CurrentPassword" />
			<span asp-validation-for="CurrentPassword"></span>

			<label asp-for="NewPassword">Введіть новий пароль:</label>
			<input type="password" placeholder="Новий пароль" asp-for="NewPassword" />
			<span asp-validation-for="NewPassword"></span>
		</div>
		<input type="submit" value="Зберегти" />
	</form>
</div>

